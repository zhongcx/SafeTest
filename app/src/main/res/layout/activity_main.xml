<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_main_content"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_main_env"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前运行环境" />
    <TextView
        android:id="@+id/tv_main_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前环境是否root" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_main_screenshot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_main_screenshot"
            android:layout_width="wrap_content"
            android:text="更改状态"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_main_log"
        android:layout_width="wrap_content"
        android:text="生成log"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_main_safe_key"
        android:layout_width="match_parent"
        android:hint="自定义安全键盘"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_main_sha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前sha值："
        />
</LinearLayout>